<UserControl x:Class="DeviationModule.Views.PlaningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviationModule.Views" 
        xmlns:models="clr-namespace:DeviationModule.Models" 
        mc:Ignorable="d"
        Height="540" Width="960">
    <DockPanel Background="Aqua">
        <StatusBar Height="30" DockPanel.Dock="Bottom"></StatusBar>
        <StackPanel DockPanel.Dock="Right" Orientation="Vertical">
            <ToggleButton x:Name="DatesButton">Все/по дате</ToggleButton>
            <Calendar x:Name="LaunchCalendar"></Calendar>
            <Button>Добавить</Button>
            <Button>Удалить</Button>
            <Button>Копировать</Button>
        </StackPanel>
            
        <StackPanel  Orientation="Vertical">
            <DataGrid MinHeight="450" MinWidth="700">
                <DataGrid.Columns>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </DockPanel>
</UserControl>
